# Production Environment Variables
# Linux Sunucunuzdaki PostgreSQL Bilgileri

# Database Configuration
VITE_DB_HOST=YOUR_SERVER_IP  # Örn: 192.168.1.100 veya domain.com
VITE_DB_PORT=5432
VITE_DB_NAME=restaurant_tracking
VITE_DB_USER=restaurant_app
VITE_DB_PASSWORD=YOUR_SECURE_PASSWORD  # Güçlü bir şifre kullanın
VITE_DB_SSL=false  # Domain alınca true yapın

# JWT Configuration
JWT_SECRET=your-very-long-random-string-here-minimum-32-characters
JWT_EXPIRES_IN=24h

# API Configuration  
VITE_API_URL=https://your-domain.netlify.app/.netlify/functions
VITE_APP_URL=https://your-domain.netlify.app

# QR Code Settings
VITE_QR_REFRESH_INTERVAL=90000  # 90 saniye (milisaniye cinsinden)

# Admin Default Credentials (ilk kurulum için)
VITE_ADMIN_EMAIL=admin@restaurant.com
VITE_ADMIN_PASSWORD=ChangeThisImmediately!

# Optional: Redis Cache (performans için)
REDIS_HOST=YOUR_SERVER_IP
REDIS_PORT=6379
REDIS_PASSWORD=YOUR_REDIS_PASSWORD

# Optional: Email Service (bildirimler için)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Optional: File Storage (personel fotoğrafları için)
STORAGE_TYPE=local  # veya 's3'
STORAGE_PATH=/var/www/uploads

# Monitoring
SENTRY_DSN=  # Hata takibi için
LOG_LEVEL=info  # debug, info, warn, error

# Security
RATE_LIMIT_WINDOW=15  # dakika
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGINS=*  # Production'da specific domain kullanın
